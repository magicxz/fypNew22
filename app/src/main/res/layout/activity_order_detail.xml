<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".order_detail">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Details"
        android:id="@+id/t1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t2"
        android:text="Your Order Number:"
        android:layout_below="@+id/t1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/orderid"
        android:layout_toRightOf="@+id/t2"
        android:text="abc"
        android:layout_below="@+id/t1"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t3"
        android:text="Delivery Address:"
        android:layout_below="@+id/t2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/currentAddr"
        android:layout_toRightOf="@+id/t3"
        android:text="abc"
        android:layout_below="@+id/t2"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tt1"
        android:text="Payment Method:"
        android:layout_below="@+id/t3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/paymentMethod"
        android:layout_toRightOf="@+id/tt1"
        android:text="abc"
        android:layout_below="@+id/t3"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tt2"
        android:text="Status:"
        android:layout_below="@+id/tt1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/status"
        android:layout_toRightOf="@+id/tt2"
        android:text="abc"
        android:layout_below="@+id/tt1"
        android:layout_marginLeft="10dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t4"
        android:text="SubTotal (RM):"
        android:layout_below="@+id/tt2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/subtot"
        android:layout_toRightOf="@+id/t4"
        android:text="abc"
        android:layout_below="@+id/tt2"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t5"
        android:text="Delivery Fee (RM):"
        android:layout_below="@+id/t4"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/delifee"
        android:layout_toRightOf="@+id/t5"
        android:text="abc"
        android:layout_below="@+id/t4"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t6"
        android:text="Total Amount (RM):"
        android:layout_below="@+id/t5"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/total"
        android:layout_toRightOf="@+id/t6"
        android:text="abc"
        android:layout_below="@+id/t5"
        android:layout_marginLeft="10dp"/>


</RelativeLayout>